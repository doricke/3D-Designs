<h1>Members</h1>

<table cellpadding="2" cellspacing="0" border="0" class="display dataTable" id="example">
  <thead>
    <tr>
      <th>Team</th>
      <th>User</th>
      <th>Role</th>
      <th></th>
      <% if session[:is_owner] -%>
        <th></th>
        <th></th>
      <% end -%>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.team.team_name %></td>
        <td><%= @users_hash[member.user_id].name if ! member.user_id.nil? %></td>
        <td><%= member.role %></td>
        <td><%= link_to 'Show', member %></td>
        <% if session[:is_owner] -%>
          <td><%= link_to 'Edit', edit_member_path(member) %></td>
          <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path if (! session[:design_id].nil?) && (! session[:user_id].nil?) %>
