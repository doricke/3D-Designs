<h1>Teams</h1>

<table cellpadding="2" cellspacing="0" border="0" class="display dataTable" id="example">
  <thead>
    <tr>
      <th>Team name</th>
      <th></th>
      <% if session[:is_admin] -%>
        <th></th>
        <th></th>
      <% end -%>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><%= link_to 'Show', team %></td>
        <% if session[:is_admin] -%>
          <td><%= link_to 'Edit', edit_team_path(team) %></td>
          <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end -%>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path if (! session[:user_id].nil?) %>
